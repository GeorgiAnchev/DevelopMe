@model DevelopMe.ViewModel.EmployeeViewModel

@{
    ViewData["Title"] = "CreateEmployee";
}

<h2>New employee</h2>

@using (Html.BeginForm("CreateEmployee", "Employees"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Employee.Name)
        @Html.TextBoxFor(m => m.Employee.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Employee.Name)
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}


